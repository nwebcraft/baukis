<% @title = 'アカウントの編集' %>
<h1><%= @title %></h1>

<div id="generic-form">
  <%= form_for @customer_form, as: 'form',
        url: :confirm_customer_account do |f| %>
    <%= render 'form', f: f %>
    <div class="buttons">
      <%= f.submit '確認する' %>
      <%= link_to 'キャンセル', :customer_account %>
    </div>
  <% end %>
</div>
